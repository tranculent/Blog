<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Update Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/blogs/<%= post %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea name="comment[text]" style="min-width: 400px; min-height: 300px">
                    <%= comment.text %>
                </textarea>
                <h4>Created At : <br></br>
                <%= comment.createdAt %></h4>
            </div>
            <div class="form-group">
                <input class="btn btn-warning" type="submit">
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>