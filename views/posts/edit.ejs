<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Update <%= post.title %> </h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/blogs/<%= post._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="blogpost[title]" value="<%= post.title %>">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="text" name="blogpost[image]" value="<%= post.image %>">
            </div>
            <div class="form-group">
                <label>Content</label>
                <input type="text" name="blogpost[content]" value="<%= post.content %>">
            </div>
            <div class="form-group">
                <input class="btn btn-warning" type="submit">
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>